CREATE INDEX ON t USING vectors (val4 veci8_l2_ops)
WITH (options = "[indexing.hnsw]");

# original style
query I
SELECT val4 FROM t WHERE val4 <-> '[2, 2, 2]' < 3 ORDER BY val4 <-> '[2, 2, 2]';
----
[2, 2, 2]

# sphere style
query I
SELECT val4 FROM t WHERE val4 <<->> sphere('[2, 2, 2]'::veci8, 3) ORDER BY val4 <-> '[2, 2, 2]';
----
[2, 2, 2]

# sphere style: multiple vector keys and no order-by key
query I
SELECT val0 FROM t WHERE val0 <<->> sphere('[0.24, 0.24, 0.24]'::vector, 0.012)
AND val1 <<#>> sphere('[0.24, -0.24, 0.24]'::vecf16, 0.05)
ORDER BY val0 <-> '[0.24, 0.24, 0.24]';
----
[0.2, 0.2, 0.2]

# sphere style: vectors in key and order-by key are different
query I
SELECT val0 FROM t WHERE val0 <<->> sphere('[0.24, 0.24, 0.24]'::vector, 0.012) 
ORDER BY val1 <#> '[1, 1, -1]';
----
[0.3, 0.3, 0.3]
[0.2, 0.2, 0.2]

