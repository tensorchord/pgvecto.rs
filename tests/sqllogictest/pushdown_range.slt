CREATE INDEX ON t USING vectors (val0 vector_l2_ops)
WITH (options = "[indexing.hnsw]");

# original style
query I
SELECT val0 FROM t WHERE val0 <-> '[0.24, 0.24, 0.24]' < 0.012 ORDER BY val0 <-> '[0.24, 0.24, 0.24]';
